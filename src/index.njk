<section class="projects-grid">
{% for project in projects %}
  <div class="project-tile" id="{{ project.id }}">
    <div class="title-box">
      <h2 class="logo-name">
        {% if project.logo %}
          {% set loading = "eager" if loop.first else "lazy" %}
          {% set fetchPriority = "high" if loop.first else "auto" %}
          {% image
            project.logo,
            project.name,
            "",
            "50px",
            loading,
            "async",
            fetchPriority
          %}
        {% endif %}
        {% if project.show_name %}
        {{ project.name }}
        {% endif %}
      </h2>
      <div class="year">({{ project.year_started }}{% if project.year_modified and project.year_modified != project.year_started %}-{{ project.year_modified }}{% endif %})</div>
    </div>
    <div class="tile-content">
      {% if project.screenshots.length > 0 %}
      <div class="screenshot">
        {% set screenshotStyle %}
          {% if project.screenshotHeight %}
            height: {{ project.screenshotHeight }}; width: auto;
          {% elif project.screenshotWidth %}
            width: {{ project.screenshotWidth }}; height: auto;
          {% else %}
            width: 240px; height: auto;
          {% endif %}
        {% endset %}

        {% for screenshot in project.screenshots %}
          <a href="/{{ screenshot }}" target="_blank">
            {# Prioritize the first screenshot of the first project for LCP #}
            {% set isHero = (loop.first and loop.parent.loop.first) %}
            {% set loading = "eager" if isHero else "lazy" %}
            {% set fetchPriority = "high" if isHero else "auto" %}

            {% image
              screenshot,
              project.name,
              screenshotStyle,
              "(min-width: 600px) 400px, 100vw",
              loading,
              "async",
              fetchPriority
            %}
          </a>
        {% endfor %}
      </div>
      {% endif %}
      {% for paragraph in project.description %}
      <p>{{ paragraph | safe }}</p>
      {% endfor %}
      <a class="source-code" href="{{ project.repository }}">Source Code</a>
      <a class="source-code" href="/projects/{{ project.id }}/" style="margin-right: 10px">Details â†’</a>
    </div>
  </div>
{% endfor %}
</section>