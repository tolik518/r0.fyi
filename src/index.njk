<h1 style="text-align: center; margin-bottom: 2rem;">Projects</h1>
<section class="projects-grid">
{% for project in projects %}
  {% set shouldEager = loop.index0 < 4 %}
  <article class="project-tile" id="{{ project.id }}" itemscope itemtype="https://schema.org/SoftwareSourceCode">
    <div class="title-box">
      <h2 class="logo-name" itemprop="name">
        {% if project.logo %}
          {% set loading = "eager" if shouldEager else "lazy" %}
          {% set fetchPriority = "high" if shouldEager else "auto" %}
          {% image
            project.logo,
            project.name,
            "",
            "50px",
            loading,
            "async",
            fetchPriority
          %}
        {% endif %}
        {% if project.show_name %}
        {{ project.name }}
        {% endif %}
      </h2>
      <div class="year">({{ project.year_started }}{% if project.year_modified and project.year_modified != project.year_started %}-{{ project.year_modified }}{% endif %})</div>
    </div>
    <div class="tile-content">
      {% if project.screenshots.length > 0 %}
      <div class="screenshot">
        {% set screenshotStyle %}
          {% if project.additional_screenshot_css %}
            {{ project.additional_screenshot_css | safe }}
          {% else %}
            width: 240px; height: auto;
          {% endif %}
        {% endset %}

        {% for screenshot in project.screenshots %}
          <a href="{% if screenshot | isExternalLink %}{{ screenshot }}{% else %}/{{ screenshot }}{% endif %}" target="_blank">
            {# Prioritize the first screenshot of the top 4 projects #}
            {% set isHero = (loop.first and shouldEager) %}
            {% set loading = "eager" if isHero else "lazy" %}
            {% set fetchPriority = "high" if isHero else "auto" %}

            {% image
              screenshot,
              "Screenshot of " + project.name,
              screenshotStyle,
              "(min-width: 600px) 400px, 100vw",
              loading,
              "async",
              fetchPriority
            %}
          </a>
        {% endfor %}
      </div>
      {% endif %}
      {% for paragraph in project.description %}
      <p itemprop="description">{{ paragraph | safe }}</p>
      {% endfor %}
      <a class="source-code" href="{{ project.repository }}" itemprop="codeRepository">Source Code</a>
      <a class="source-code" href="/projects/{{ project.id }}/" style="margin-right: 10px">Details â†’</a>
    </div>
  </article>
{% endfor %}
</section>