---
pagination:
  data: projects
  size: 1
  alias: project
permalink: /projects/{{ project.id }}/
layout: layout.njk
eleventyComputed:
  title: "{{ project.name }}"
  description: "{{ project.description[0] | stripHtml }}"
  image: "{{ project.social_preview }}"
  keywords: "{{ project.keywords | join(', ') }}"
---
<nav class="breadcrumb" style="margin-bottom: 1rem;">
  <a href="/">‚Üê Back to all projects</a>
</nav>

<div class="project-tile" style="opacity: 1; transform: none; cursor: default;">
  <div class="title-box">
    <h1 class="logo-name">
      {% if project.logo %}
        {% image
          project.logo,
          project.name,
          "",
          "50px",
          "eager",
          "async",
          "high"
        %}
      {% endif %}
      {{ project.name }}
    </h1>
    <div class="year">({{ project.year_started }}{% if project.year_finished and project.year_finished != project.year_started %}-{{ project.year_finished }}{% endif %})</div>
  </div>

  <div class="tile-content">
    <div class="project-details-layout">
      <div class="project-main-content">
        {% if project.screenshots.length > 0 %}
        <div class="screenshot">
          {% set screenshotStyle %}
            {% if project.additional_screenshot_css %}
              {{ project.additional_screenshot_css | safe }}
            {% else %}
              width: 240px; height: auto;
            {% endif %}
          {% endset %}

          {% for screenshot in project.screenshots %}
            <a href="{% if screenshot | isExternalLink %}{{ screenshot }}{% else %}/{{ screenshot }}{% endif %}" target="_blank">
               {% set loading = "eager" if loop.first else "lazy" %}
               {% set fetchPriority = "high" if loop.first else "auto" %}
               {% image
                 screenshot,
                 "Screenshot of " + project.name,
                 screenshotStyle,
                 "(min-width: 600px) 600px, 100vw",
                 loading,
                 "async",
                 fetchPriority
               %}
            </a>
          {% endfor %}
        </div>
        {% endif %}

        <div class="project-description">
          {% for paragraph in project.description %}
          <p>{{ paragraph | safe }}</p>
          {% endfor %}
        </div>
      </div>

      <div class="project-info">
        <dl>
          <dt><strong>Technologies:</strong></dt>
          <dd>{{ project.technologies.join(', ') }}</dd>

          <dt><strong>Platforms:</strong></dt>
          <dd>{{ project.platforms.join(', ') }}</dd>

          <dt><strong>Repository:</strong></dt>
          <dd><a href="{{ project.repository }}" target="_blank">{{ project.repository }}</a></dd>
        </dl>
      </div>
    </div>
  </div>
</div>
